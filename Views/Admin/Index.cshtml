@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Stats Grid -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon orange">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <div class="stat-value">@ViewBag.TotalLands</div>
        <div class="stat-label">Destinations</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon blue">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path></svg>
        </div>
        <div class="stat-value">@ViewBag.TotalJourneys</div>
        <div class="stat-label">Journeys</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon green">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
        </div>
        <div class="stat-value">@ViewBag.TotalBookings</div>
        <div class="stat-label">Total Bookings</div>
    </div>
    
    <div class="stat-card">
        <div class="stat-icon purple">
            <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>
        </div>
        <div class="stat-value">@ViewBag.TotalUsers</div>
        <div class="stat-label">Users</div>
    </div>
</div>

<div class="grid-2">
    <!-- Pending Bookings Alert -->
    @if (ViewBag.PendingBookings > 0)
    {
        <div class="card">
            <div class="card-header" style="background-color: #fef3c7; color: #92400e;">
                ⚠️ Pending Bookings: @ViewBag.PendingBookings
            </div>
            <div class="card-body">
                <p style="margin-bottom: 1rem; color: #6b7280;">You have bookings that need your attention.</p>
                <a href="@Url.Action("Bookings", "Admin", new { status = "Pending" })" class="btn btn-primary">
                    View Pending Bookings
                </a>
            </div>
        </div>
    }
    
    <!-- Quick Actions -->
    <div class="card">
        <div class="card-header">Quick Actions</div>
        <div class="card-body">
            <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                <a href="@Url.Action("CreateLand", "Admin")" class="btn btn-primary">+ Add Destination</a>
                <a href="@Url.Action("CreateJourney", "Admin")" class="btn btn-primary">+ Add Journey</a>
                <a href="@Url.Action("Bookings", "Admin")" class="btn btn-secondary">View Bookings</a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Bookings -->
<div class="card mt-4">
    <div class="card-header flex justify-between items-center">
        <span>Recent Bookings</span>
        <a href="@Url.Action("Bookings", "Admin")" class="btn btn-secondary btn-sm">View All</a>
    </div>
    <div class="card-body" style="padding: 0;">
        @{
            var recentBookings = ViewBag.RecentBookings as List<DesertPaths.Models.Entities.Booking>;
        }
        @if (recentBookings != null && recentBookings.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Reference</th>
                        <th>Customer</th>
                        <th>Journey</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in recentBookings)
                    {
                        <tr>
                            <td><strong>@booking.BookingReference</strong></td>
                            <td>@booking.User.FullName</td>
                            <td>@booking.Journey.Title</td>
                            <td>@booking.TravelDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                <span class="badge @(booking.Status == DesertPaths.Models.Enums.BookingStatus.Confirmed ? "badge-success" : booking.Status == DesertPaths.Models.Enums.BookingStatus.Pending ? "badge-warning" : "badge-danger")">
                                    @booking.Status
                                </span>
                            </td>
                            <td>$@booking.TotalPrice.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="padding: 2rem; text-align: center; color: #6b7280;">No bookings yet.</p>
        }
    </div>
</div>
