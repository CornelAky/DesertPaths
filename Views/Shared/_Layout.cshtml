<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Desert Paths</title>
    <meta name="description" content="Discover extraordinary desert adventures. Explore ancient lands, experience authentic cultures, and create unforgettable memories." />
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DesertPaths.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation -->
    <nav class="nav-main" id="mainNav">
        <div class="nav-container">
            <!-- Logo -->
            <a class="nav-logo" asp-controller="Home" asp-action="Index">
                <svg width="32" height="32" viewBox="0 0 40 40" fill="none">
                    <circle cx="20" cy="20" r="18" stroke="currentColor" stroke-width="2"/>
                    <path d="M10 28 Q15 18 20 22 Q25 26 30 16" stroke="currentColor" stroke-width="2" fill="none"/>
                    <circle cx="28" cy="12" r="3" fill="currentColor"/>
                </svg>
                <span>Desert Paths</span>
            </a>

            <!-- Desktop Menu (center) -->
            <ul class="nav-links">
                <li><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="nav-dropdown">
                    <a class="nav-link dropdown-toggle" href="#">
                        Lands
                        <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </a>
                    <ul class="dropdown-menu">
                        @await Component.InvokeAsync("NavigationLands")
                    </ul>
                </li>
                <li><a class="nav-link" asp-controller="Journeys" asp-action="Index">Journeys</a></li>
                <li><a class="nav-link" asp-controller="Home" asp-action="OurStory">Our Story</a></li>
                <li><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>

            <!-- Auth (right) -->
            <div class="nav-auth">
                <partial name="_LoginPartial" />
            </div>

            <!-- Mobile Toggle -->
            <button class="nav-mobile-toggle" onclick="toggleMobileNav()" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div class="nav-mobile-menu" id="mobileMenu">
            <ul class="nav-links-mobile">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="has-submenu">
                    <a href="#" onclick="toggleMobileSubmenu(event)">
                        Lands
                        <svg width="12" height="12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </a>
                    <ul class="mobile-submenu">
                        @await Component.InvokeAsync("NavigationLands")
                    </ul>
                </li>
                <li><a asp-controller="Journeys" asp-action="Index">Journeys</a></li>
                <li><a asp-controller="Home" asp-action="OurStory">Our Story</a></li>
                <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
            </ul>
            <div class="nav-mobile-auth">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main style="padding-top: 4rem;">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer style="background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%); color: white; padding-top: 4rem;">
        <div class="container">
            <!-- Main Footer -->
            <div style="display: grid; grid-template-columns: 2fr 1fr 1fr 1fr; gap: 3rem; padding-bottom: 3rem; border-bottom: 1px solid rgba(255,255,255,0.1);">
                <!-- Brand Column -->
                <div>
                    <a asp-controller="Home" asp-action="Index" style="display: flex; align-items: center; gap: 0.5rem; text-decoration: none; color: white; margin-bottom: 1.5rem;">
                        <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
                            <circle cx="20" cy="20" r="18" stroke="var(--desert-400)" stroke-width="2"/>
                            <path d="M10 28 Q15 18 20 22 Q25 26 30 16" stroke="var(--desert-400)" stroke-width="2" fill="none"/>
                            <circle cx="28" cy="12" r="3" fill="var(--desert-400)"/>
                        </svg>
                        <span style="font-family: 'Playfair Display', serif; font-size: 1.5rem; font-weight: 600;">Desert Paths</span>
                    </a>
                    <p style="color: #9ca3af; line-height: 1.7; margin-bottom: 1.5rem;">
                        Crafting unforgettable desert adventures since 2010. 
                        Experience the magic of ancient lands with expert local guides.
                    </p>

                    <!-- Social Links -->
                    <div style="display: flex; gap: 1rem;">
                        <a href="https://facebook.com" target="_blank" style="width: 40px; height: 40px; background: rgba(255,255,255,0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; transition: all 0.3s;" onmouseover="this.style.backgroundColor='#1877f2'" onmouseout="this.style.backgroundColor='rgba(255,255,255,0.1)'">
                            <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
