@using Microsoft.AspNetCore.Identity
@using DesertPaths.Models.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var displayName = user?.FirstName ?? User.Identity?.Name ?? "User";

    <div style="display: flex; align-items: center; gap: 1rem; flex-wrap: wrap;">
        <!-- User Dropdown -->
        <div style="position: relative;" class="user-dropdown">
            <button onclick="toggleUserMenu(event)" style="display: flex; align-items: center; gap: 0.5rem; padding: 0.5rem; border: none; background: transparent; cursor: pointer; color: inherit;">
                <div style="width: 36px; height: 36px; background: linear-gradient(135deg, var(--desert-400), var(--desert-600)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white;">
                    <span style="font-weight: 600; font-size: 0.875rem;">@displayName[0].ToString().ToUpper()</span>
                </div>
                <span class="user-name" style="font-weight: 500; color: #374151;">@displayName</span>
                <svg class="user-arrow" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </button>

            <div id="userMenu" style="display: none; position: absolute; right: 0; top: 100%; margin-top: 0.5rem; width: 220px; background: white; border-radius: 0.75rem; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15); z-index: 100; overflow: hidden;">
                <div style="padding: 1rem; border-bottom: 1px solid #e5e7eb; background: linear-gradient(135deg, var(--desert-50), white);">
                    <p style="font-weight: 600; color: #111827;">@user?.FullName</p>
                    <p style="font-size: 0.75rem; color: #6b7280;">@user?.Email</p>
                </div>

                <a asp-area="Identity" asp-page="/Account/Manage/Index" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: #374151; text-decoration: none;" onmouseover="this.style.backgroundColor='#f9fafb'" onmouseout="this.style.backgroundColor='transparent'">
                    <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    My Profile
                </a>

                <a asp-controller="Booking" asp-action="MyBookings" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: #374151; text-decoration: none;" onmouseover="this.style.backgroundColor='#f9fafb'" onmouseout="this.style.backgroundColor='transparent'">
                    <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    My Bookings
                </a>

                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <div style="border-top: 1px solid #e5e7eb;"></div>
                    <a asp-controller="Admin" asp-action="Index" style="display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: #374151; text-decoration: none;" onmouseover="this.style.backgroundColor='#f9fafb'" onmouseout="this.style.backgroundColor='transparent'">
                        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Admin Panel
                    </a>
                }

                <div style="border-top: 1px solid #e5e7eb;"></div>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" style="width: 100%; display: flex; align-items: center; gap: 0.75rem; padding: 0.75rem 1rem; color: #dc2626; background: transparent; border: none; cursor: pointer; text-align: left; font-size: 1rem;" onmouseover="this.style.backgroundColor='#fef2f2'" onmouseout="this.style.backgroundColor='transparent'">
                        <svg width="18" height="18" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                        </svg>
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function toggleUserMenu(event) {
            event.stopPropagation();
            var menu = document.getElementById('userMenu');
            menu.style.display = menu.style.display === 'none' ? 'block' : 'none';
        }

        document.addEventListener('click', function(event) {
            var menu = document.getElementById('userMenu');
            var dropdown = document.querySelector('.user-dropdown');
            if (menu && dropdown && !dropdown.contains(event.target)) {
                menu.style.display = 'none';
            }
        });
    </script>

    <style>
        @@media (max-width: 767px) {
            .user-name, .user-arrow {
                display: none;
            }
        }
    </style>
}
else
{
    <div style="display: flex; align-items: center; gap: 0.75rem;">
        <a asp-area="Identity" asp-page="/Account/Login" style="color: #374151; text-decoration: none; font-weight: 500; padding: 0.5rem;">Login</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem;">Sign Up</a>
    </div>
}
