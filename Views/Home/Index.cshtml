@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">Discover the Magic of the Desert</h1>
        <p class="hero-subtitle">
            Embark on extraordinary journeys through ancient lands. 
            Experience authentic cultures, breathtaking landscapes, and create memories that last a lifetime.
        </p>
        <div class="flex items-center justify-center gap-4" style="flex-wrap: wrap;">
            <a asp-controller="Journeys" asp-action="Index" class="btn-primary">Explore Journeys</a>
            <a asp-controller="Home" asp-action="OurStory" class="btn-outline" style="border-color: white; color: white;">Our Story</a>
        </div>
    </div>
</section>

<!-- Featured Destinations Section -->
<section class="section">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Explore Our Destinations</h2>
            <p class="section-subtitle">
                From vast golden dunes to ancient oases, discover lands that have captivated travelers for centuries.
            </p>
        </div>

        <div class="grid grid-3">
            <!-- Destination Card 1 -->
            <div class="card">
                <img src="https://images.unsplash.com/photo-1509316785289-025f5b846b35?w=600&h=400&fit=crop" alt="Saudi Arabia Desert" class="card-image">
                <div class="card-body">
                    <span class="badge badge-primary">Popular</span>
                    <h3 class="card-title" style="margin-top: 0.5rem;">Saudi Arabia</h3>
                    <p class="card-text">Discover the vast Empty Quarter and ancient Nabatean ruins of AlUla.</p>
                    <a asp-controller="Lands" asp-action="Details" asp-route-slug="saudi-arabia" class="btn-outline" style="width: 100%; text-align: center;">Explore</a>
                </div>
            </div>

            <!-- Destination Card 2 -->
            <div class="card">
                <img src="https://images.unsplash.com/photo-1547234935-80c7145ec969?w=600&h=400&fit=crop" alt="Jordan Desert" class="card-image">
                <div class="card-body">
                    <span class="badge badge-secondary">Featured</span>
                    <h3 class="card-title" style="margin-top: 0.5rem;">Jordan</h3>
                    <p class="card-text">Walk through the rose-red city of Petra and camp under Wadi Rum stars.</p>
                    <a asp-controller="Lands" asp-action="Details" asp-route-slug="jordan" class="btn-outline" style="width: 100%; text-align: center;">Explore</a>
                </div>
            </div>

            <!-- Destination Card 3 -->
            <div class="card">
                <img src="https://images.unsplash.com/photo-1548018560-c7196c4cbc30?w=600&h=400&fit=crop" alt="Morocco Desert" class="card-image">
                <div class="card-body">
                    <h3 class="card-title">Morocco</h3>
                    <p class="card-text">Experience the magic of Saharan dunes and vibrant Berber culture.</p>
                    <a asp-controller="Lands" asp-action="Details" asp-route-slug="morocco" class="btn-outline" style="width: 100%; text-align: center;">Explore</a>
                </div>
            </div>
        </div>

        <div class="text-center mt-4" style="margin-top: 2rem;">
            <a asp-controller="Lands" asp-action="Index" class="btn-secondary">View All Destinations</a>
        </div>
    </div>
</section>

