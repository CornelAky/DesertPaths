<!-- Reviews Section -->
@{
    var reviews = ViewBag.Reviews as List<DesertPaths.Models.Entities.Review>;
}
@if (reviews != null && reviews.Any())
{
    <section class="section" style="background-color: #faf7f2;">
        <div class="container">
            <div style="text-align: center; margin-bottom: 3rem;">
                <p style="color: var(--desert-600); font-weight: 500; text-transform: uppercase; letter-spacing: 0.1em; font-size: 0.875rem; margin-bottom: 0.5rem;">Testimonials</p>
                <h2 class="font-display" style="font-size: 2.5rem; color: #111827; margin-bottom: 1rem;">
                    What Our Travelers Say
                </h2>
                <p style="color: #6b7280; max-width: 600px; margin: 0 auto;">
                    Hear from adventurers who have experienced the magic of the desert with us
                </p>
            </div>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 1.5rem; max-width: 1200px; margin: 0 auto;">
                @foreach (var review in reviews)
                {
                    <div class="card" style="padding: 1.5rem; display: flex; flex-direction: column;">
                        <!-- Stars -->
                        <div style="display: flex; color: #f59e0b; margin-bottom: 1rem;">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span style="font-size: 1.25rem;">@(i <= review.Rating ? "★" : "☆")</span>
                            }
                        </div>

                        <!-- Comment -->
                        @if (!string.IsNullOrEmpty(review.Comment))
                        {
                            <p style="color: #374151; line-height: 1.6; flex-grow: 1; font-style: italic;">
                                "@(review.Comment.Length > 150 ? review.Comment.Substring(0, 150) + "..." : review.Comment)"
                            </p>
                        }
                        else
                        {
                            <p style="color: #9ca3af; flex-grow: 1; font-style: italic;">
                                "Amazing experience!"
                            </p>
                        }

                        <!-- Author & Journey -->
                        <div style="display: flex; align-items: center; gap: 0.75rem; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
                            <div style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--desert-400), var(--desert-600)); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-weight: 600;">
                                @(review.User.FirstName?[0].ToString().ToUpper() ?? "T")
                            </div>
                            <div style="flex-grow: 1;">
                                <p style="font-weight: 600; color: #111827;">
                                    @review.User.FirstName @(review.User.LastName != null ? review.User.LastName[0] + "." : "")
                                </p>
                                <p style="font-size: 0.75rem; color: #6b7280;">
                                    @review.Journey.Title • @review.Journey.Land.Name
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div style="text-align: center; margin-top: 2rem;">
                <a asp-controller="Journeys" asp-action="Index" class="btn-outline">
                    See All Journeys & Reviews
                </a>
            </div>
        </div>
    </section>
}

<!-- CTA Section -->
<section class="section section-dark" style="text-align: center;">
    <div class="container">
        <h2 class="font-display" style="font-size: 2.5rem; margin-bottom: 1rem;">Ready for Your Desert Adventure?</h2>
        <p style="color: #d1d5db; margin-bottom: 2rem; max-width: 600px; margin-left: auto; margin-right: auto;">
            Join thousands of travelers who have discovered the magic of the desert with us. 
            Your journey of a lifetime awaits.
        </p>
        <a asp-controller="Journeys" asp-action="Index" class="btn-primary" style="font-size: 1.125rem; padding: 1rem 2rem;">
            Start Planning Your Journey
        </a>
    </div>
</section>
