@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<section class="hero" style="min-height: 100vh; padding-top: 6rem;">
    <div class="hero-content" style="max-width: 450px; width: 100%;">
        <div class="card" style="padding: 2.5rem; text-align: left; background: white;">
            <div style="text-align: center; margin-bottom: 2rem;">
                <h1 style="font-family: 'Playfair Display', serif; font-size: 2rem; font-weight: 700; color: #111827;">Welcome Back</h1>
                <p style="color: #6b7280;">Sign in to continue your desert adventure</p>
            </div>

            @if (Model.ExternalLogins?.Count > 0)
            {
                <div style="margin-bottom: 1.5rem;">
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" name="provider" value="@provider.Name" 
                                    style="width: 100%; padding: 0.75rem; margin-bottom: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; background: white; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 0.75rem; font-weight: 500; transition: background-color 0.2s;"
                                    onmouseover="this.style.backgroundColor='#f9fafb'" 
                                    onmouseout="this.style.backgroundColor='white'">
                                @if (provider.Name == "Google")
                                {
                                    <svg width="20" height="20" viewBox="0 0 24 24">
                                        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                                        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                                        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                                        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                                    </svg>
                                    <span>Continue with Google</span>
                                }
                                else if (provider.Name == "Microsoft")
                                {
                                    <svg width="20" height="20" viewBox="0 0 23 23">
                                        <rect fill="#f25022" x="1" y="1" width="10" height="10"/>
                                        <rect fill="#00a4ef" x="1" y="12" width="10" height="10"/>
                                        <rect fill="#7fba00" x="12" y="1" width="10" height="10"/>
                                        <rect fill="#ffb900" x="12" y="12" width="10" height="10"/>
                                    </svg>
                                    <span>Continue with Microsoft</span>
                                }
                                else
                                {
                                    <span>@provider.DisplayName</span>
                                }
                            </button>
                        }
                    </form>
                    
                    <div style="display: flex; align-items: center; gap: 1rem; margin: 1.5rem 0;">
                        <div style="flex: 1; height: 1px; background-color: #e5e7eb;"></div>
                        <span style="color: #9ca3af; font-size: 0.875rem;">or</span>
                        <div style="flex: 1; height: 1px; background-color: #e5e7eb;"></div>
                    </div>
                </div>
            }

            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" style="color: #dc2626; margin-bottom: 1rem;"></div>
                
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.Email" style="display: block; font-weight: 500; margin-bottom: 0.5rem; color: #374151;">Email</label>
                    <input asp-for="Input.Email" autocomplete="username" 
                           style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 1rem;" 
                           placeholder="your@email.com" />
                    <span asp-validation-for="Input.Email" style="color: #dc2626; font-size: 0.875rem;"></span>
                </div>
                
                <div style="margin-bottom: 1rem;">
                    <label asp-for="Input.Password" style="display: block; font-weight: 500; margin-bottom: 0.5rem; color: #374151;">Password</label>
                    <input asp-for="Input.Password" autocomplete="current-password" 
                           style="width: 100%; padding: 0.75rem; border: 1px solid #d1d5db; border-radius: 0.5rem; font-size: 1rem;" 
                           placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" style="color: #dc2626; font-size: 0.875rem;"></span>
                </div>
                
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                    <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                        <input asp-for="Input.RememberMe" style="width: 1rem; height: 1rem;" />
                        <span style="font-size: 0.875rem; color: #4b5563;">Remember me</span>
                    </label>
                    <a asp-page="./ForgotPassword" style="font-size: 0.875rem; color: var(--desert-600);">Forgot password?</a>
                </div>
                
                <button type="submit" class="btn-primary" style="width: 100%; text-align: center; padding: 0.875rem;">
                    Sign In
                </button>
            </form>
            
            <p style="text-align: center; margin-top: 1.5rem; font-size: 0.875rem; color: #6b7280;">
                Don't have an account? 
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: var(--desert-600); font-weight: 500;">Sign up</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
