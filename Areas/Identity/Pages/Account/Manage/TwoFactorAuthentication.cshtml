@page
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-Factor Authentication";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<div class="card" style="padding: 2rem;">
    <h2 style="font-family: 'Playfair Display', serif; font-size: 1.5rem; font-weight: 600; margin-bottom: 1rem;">Two-Factor Authentication (2FA)</h2>
    
    <partial name="_StatusMessage" for="StatusMessage" />
    
    <p style="color: #6b7280; margin-bottom: 1.5rem;">
        Add an extra layer of security to your account by enabling two-factor authentication.
    </p>
    
    @if (Model.Is2faEnabled)
    {
        <div style="background-color: #d1fae5; border: 1px solid #10b981; border-radius: 0.5rem; padding: 1rem; margin-bottom: 1.5rem;">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <svg width="24" height="24" fill="none" stroke="#059669" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
                <div>
                    <p style="font-weight: 600; color: #065f46;">Two-Factor Authentication is Enabled</p>
                    <p style="font-size: 0.875rem; color: #047857;">Your account is protected with 2FA.</p>
                </div>
            </div>
        </div>
        
        <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
            <form method="post" asp-page-handler="Disable2fa">
                <button type="submit" class="btn-outline" style="padding: 0.75rem 1.5rem; border-color: #dc2626; color: #dc2626;">
                    Disable 2FA
                </button>
            </form>
            <a asp-page="./GenerateRecoveryCodes" class="btn-secondary" style="padding: 0.75rem 1.5rem;">
                Generate Recovery Codes
            </a>
        </div>
    }
    else
    {
        <div style="background-color: #fef3c7; border: 1px solid #fcd34d; border-radius: 0.5rem; padding: 1rem; margin-bottom: 1.5rem;">
            <div style="display: flex; align-items: center; gap: 0.75rem;">
                <svg width="24" height="24" fill="none" stroke="#d97706" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                </svg>
                <div>
                    <p style="font-weight: 600; color: #92400e;">Two-Factor Authentication is Disabled</p>
                    <p style="font-size: 0.875rem; color: #78350f;">Enable 2FA for enhanced security.</p>
                </div>
            </div>
        </div>
        
        <a asp-page="./EnableAuthenticator" class="btn-primary" style="padding: 0.75rem 1.5rem;">
            Enable 2FA
        </a>
    }
</div>

@if (Model.Is2faEnabled && Model.RecoveryCodesLeft > 0)
{
    <div class="card" style="padding: 2rem; margin-top: 1.5rem;">
        <h3 style="font-weight: 600; margin-bottom: 1rem;">Recovery Codes</h3>
        <p style="font-size: 0.875rem; color: #6b7280; margin-bottom: 1rem;">
            You have <strong>@Model.RecoveryCodesLeft</strong> recovery codes remaining.
        </p>
        <p style="font-size: 0.875rem; color: #6b7280;">
            Recovery codes can be used to access your account if you lose your authenticator device.
            If you run low on codes, you should generate new ones.
        </p>
    </div>
}
