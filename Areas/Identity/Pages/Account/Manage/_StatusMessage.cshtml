@model string

@if (!string.IsNullOrEmpty(Model))
{
    var isSuccess = !Model.Contains("error", StringComparison.OrdinalIgnoreCase) && 
                    !Model.Contains("fail", StringComparison.OrdinalIgnoreCase);
    
    <div style="padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; @(isSuccess ? "background-color: #d1fae5; border: 1px solid #10b981; color: #065f46;" : "background-color: #fee2e2; border: 1px solid #ef4444; color: #991b1b;")">
        <div style="display: flex; align-items: center; gap: 0.5rem;">
            @if (isSuccess)
            {
                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            }
            else
            {
                <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
            }
            @Model
        </div>
    </div>
}
