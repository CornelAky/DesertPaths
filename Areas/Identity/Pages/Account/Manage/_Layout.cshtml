@{
    ViewData["Title"] = "Manage Account";
    Layout = "/Views/Shared/_Layout.cshtml";
    var activePageKey = ViewData["ActivePage"]?.ToString();
}

<section class="hero" style="min-height: 25vh;">
    <div class="hero-content">
        <h1 class="hero-title" style="font-size: 2rem;">My Account</h1>
        <p class="hero-subtitle">Manage your account settings and preferences</p>
    </div>
</section>

<section class="section" style="padding-top: 2rem;">
    <div class="container" style="max-width: 1000px;">
        <style>
            @@media (min-width: 768px) {
                .manage-grid { grid-template-columns: 250px 1fr !important; }
            }
            .manage-nav-link {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                padding: 0.75rem 1rem;
                color: #4b5563;
                text-decoration: none;
                border-radius: 0.5rem;
                transition: all 0.2s;
            }
            .manage-nav-link:hover {
                background-color: var(--desert-50);
                color: var(--desert-700);
            }
            .manage-nav-link.active {
                background-color: var(--desert-100);
                color: var(--desert-800);
                font-weight: 600;
            }
        </style>

        <div class="manage-grid" style="display: grid; grid-template-columns: 1fr; gap: 2rem;">
            <!-- Sidebar Navigation -->
            <div>
                <div class="card" style="padding: 1rem;">
                    <nav style="display: flex; flex-direction: column; gap: 0.25rem;">
                        <a asp-page="./Index" class="manage-nav-link @(activePageKey == "Index" ? "active" : "")">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Profile
                        </a>
                        <a asp-page="./Email" class="manage-nav-link @(activePageKey == "Email" ? "active" : "")">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            Email
                        </a>
                        <a asp-page="./ChangePassword" class="manage-nav-link @(activePageKey == "ChangePassword" ? "active" : "")">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                            </svg>
                            Password
                        </a>
                        <a asp-page="./TwoFactorAuthentication" class="manage-nav-link @(activePageKey == "TwoFactorAuthentication" ? "active" : "")">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                            Two-Factor Auth
                        </a>

                        <div style="border-top: 1px solid #e5e7eb; margin: 0.5rem 0;"></div>

                        <a asp-page="./PersonalData" class="manage-nav-link @(activePageKey == "PersonalData" ? "active" : "")">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                            </svg>
                            Personal Data
                        </a>
                        <a asp-page="./DeletePersonalData" class="manage-nav-link @(activePageKey == "DeletePersonalData" ? "active" : "")" style="color: #dc2626;">
                            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            Delete Account
                        </a>
                    </nav>
                </div>
            </div>

            <!-- Main Content -->
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</section>

@await RenderSectionAsync("Scripts", required: false)
